@model IEnumerable<WorkforceManagement.Models.Employees>

@{
    ViewData["Title"] = "Employee List";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department.DeptName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employees in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => employees.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => employees.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => employees.Department.DeptName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@employees.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@employees.Id">Details</a> 
            </td>
        </tr>
        }
    </tbody>
</table>