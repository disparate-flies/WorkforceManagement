@model IEnumerable<WorkforceManagement.Models.Department>

@{
    ViewData["Title"] = "Department List";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeptName)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => department.DeptName)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@department.Id">Details</a> |
                    <a asp-action="DeleteConfirm" asp-route-id="@department.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
